        "level": 2,
        "content": [{ "text": "Non-Critical Thinking: Characteristics" }]
      },
      {
        "id": "rmse-c2-sm-block-slide12-list-col1",
        "type": "list",
        "ordered": false,
        "items": [
          { "id": "rmse-c2-sm-li-s12-1", "content": [{ "text": "Fun: Engaging and enjoyable." }] },
          { "id": "rmse-c2-sm-li-s12-2", "content": [{ "text": "Exciting: Thrilling and interesting." }] },
          { "id": "rmse-c2-sm-li-s12-3", "content": [{ "text": "Feels Good: Evokes positive emotions." }] },
          { "id": "rmse-c2-sm-li-s12-4", "content": [{ "text": "Attention-getting: Draws notice." }] },
          { "id": "rmse-c2-sm-li-s12-5", "content": [{ "text": "Popular: Widely liked." }] },
          { "id": "rmse-c2-sm-li-s12-6", "content": [{ "text": "Patriotic: Inspires national pride." }] },
          { "id": "rmse-c2-sm-li-s12-7", "content": [{ "text": "Free: No cost; accessible to all." }] }
        ]
      },
      {
        "id": "rmse-c2-sm-block-slide12-list-col2",
        "type": "list",
        "ordered": false,
        "items": [
          { "id": "rmse-c2-sm-li-s12-8", "content": [{ "text": "Chic: Stylish and trendy." }] },
          { "id": "rmse-c2-sm-li-s12-9", "content": [{ "text": "Spontaneous: Impulsive and exciting." }] },
          { "id": "rmse-c2-sm-li-s12-10", "content": [{ "text": "Advantageous: Beneficial and favorable." }] },
          { "id": "rmse-c2-sm-li-s12-11", "content": [{ "text": "Easy: Simple and low-effort." }] },
          { "id": "rmse-c2-sm-li-s12-12", "content": [{ "text": "Beneficial to Me: Helpful to my goals." }] },
          { "id": "rmse-c2-sm-li-s12-13", "content": [{ "text": "Deeply Moving/Felt: Evokes strong emotions." }] }
        ]
      },
